{{#if addNewQuestion}}
<h1>New Question</h1>
<div>
  <form>
    <div class="form-group">
      <label for="question">Question: </label>
      {{input value=question id="question"}}
    </div>
  <br>
    <div class="form-group">
      <label for="author">Author: </label>
      {{input value=author id="author"}}
    </div>
  <br>
    <div class="form-group">
      <label for="notes">Notes: </label>
      {{input value=notes id="notes"}}
    </div>
    <br>
    <button {{action 'saveQuestion'}}>Save</button>
  </form>
</div>
{{else}}
<button {{action 'questionFormShow'}}>Ask Question</button>
{{/if}}
