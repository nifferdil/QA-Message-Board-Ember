{{#if updateQuestionForm}}
  <h4>Update {{model.author}}'s question:</h4>
<div>
  <form>
    <div class="form-group">
      <label for="question">Question: </label>
      {{input value=question id="question" placeholder=model.question}}
    </div>
  <br>
    <div class="form-group">
      <label for="author">Author: </label>
      {{input value=author id="author" placeholder=model.author}}
    </div>
  <br>
    <div class="form-group">
      <label for="notes">Notes: </label>
      {{input value=notes id="notes" placeholder=model.notes}}
    </div>
    <br>
    <button {{action 'update' model}}>Save</button>
  </form>
</div>
{{else}}
    <button class="btn btn-primary"{{action 'updateQuestionForm'}}>Update Question</button>
{{/if}}
